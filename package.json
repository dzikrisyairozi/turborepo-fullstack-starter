{
  "name": "turborepo-fullstack-starter",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,js,jsx,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,js,jsx,css,scss}\"",
    "type-check": "turbo run type-check",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "dev:docs": "turbo run dev --filter=docs",
    "build:web": "turbo run build --filter=web",
    "build:api": "turbo run build --filter=api",
    "build:docs": "turbo run build --filter=docs",
    "db:generate": "turbo run db:generate --filter=api",
    "db:push": "turbo run db:push --filter=api",
    "db:migrate": "turbo run db:migrate --filter=api",
    "db:studio": "turbo run db:studio --filter=api",
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
    "check-all": "pnpm run type-check && pnpm run lint && pnpm run format:check"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.15.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,html}": [
      "prettier --write"
    ]
  }
}
