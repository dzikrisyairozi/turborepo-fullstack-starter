{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "postinstall": "prisma generate",
    "build": "prisma generate && tsc && node -e \"const fs = require('fs'); const path = require('path'); if (fs.existsSync('src/generated')) { fs.cpSync('src/generated', 'dist/src/generated', { recursive: true, force: true }); }\"",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"src/generated\" --fix",
    "lint:check": "eslint \"src/**/*.ts\" --ignore-pattern \"src/generated\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist .turbo"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.4.0",
    "eslint": "^9.35.0",
    "prisma": "^6.16.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  }
}
